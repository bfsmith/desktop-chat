{
  "name": "ts-bootstrap",
  "version": "0.1.0",
  "description": "",
  "main": "build/server/index.js",
  "config": {
    "outPath": "build"
  },
  "scripts": {
    "build:ts": "tsc --outDir $npm_package_config_outPath/",
    "postbuild:ts": "npm run lint -s",
    "build": "npm run build:ts -s",
    "postbuild": "npm run copyAssets -s",
    "build:w": "npm run build:ts -s -- -w",
    "lint": "node_modules/tslint/bin/tslint -c tslint.json --project tsconfig.json src/**/*.ts",
    "copyAssets": "rsync -az --include='*/' --include='*.html' --include='*.css' --include='*.js' --include='*.ejs' --exclude='*'  --prune-empty-dirs src/ $npm_package_config_outPath/",
    "copyAssets:w": "onchange \"src/**/*.(html|ejs|css|js)\" -w -- npm run copyAssets -s",
    "pretest": "npm run build",
    "mocha": "mocha -c -R spec -r $npm_package_config_outPath/test.setup `find $npm_package_config_outPath/ -type f -name *.test.js`",
    "mocha:w": "npm run mocha -s -- -w",
    "test": "npm run mocha -s -- -d",
    "test:w": "concurrently 'npm run build:w -s' 'npm run test -s -- -w'",
    "clean": "rm -rf $npm_package_config_outPath/",
    "live-reload": "live-reload --port 35729 $npm_package_config_outPath/ --delay 1000",
    "watch": "concurrently 'npm run build:w -s' 'npm run copyAssets:w -s'",
    "start": "npm run build && concurrently 'npm run watch' \"nodemon -w $npm_package_config_outPath/ -d 2 --debug $npm_package_config_outPath/public/server.js\" 'npm run live-reload -s' 'open http://localhost:3000/'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chai": "^3.5.0",
    "codelyzer": "0.0.25",
    "concurrently": "^2.2.0",
    "live-reload": "^1.1.0",
    "mocha": "^2.5.3",
    "onchange": "^2.5.0",
    "supertest": "^1.2.0",
    "tslint": "^3.13.0",
    "tslint-microsoft-contrib": "^2.0.8",
    "typescript": "^1.8.10"
  },
  "dependencies": {
    "@angular/common": "2.0.0-rc.4",
    "@angular/compiler": "2.0.0-rc.4",
    "@angular/core": "2.0.0-rc.4",
    "@angular/forms": "0.2.0",
    "@angular/http": "2.0.0-rc.4",
    "@angular/platform-browser": "2.0.0-rc.4",
    "@angular/platform-browser-dynamic": "2.0.0-rc.4",
    "@angular/router": "3.0.0-beta.1",
    "@angular/router-deprecated": "2.0.0-rc.2",
    "@angular/upgrade": "2.0.0-rc.4",
    "angular2-in-memory-web-api": "0.0.14",
    "body-parser": "^1.15.2",
    "bootstrap": "^3.3.6",
    "compression": "^1.6.2",
    "connect-timeout": "^1.7.0",
    "consolidate": "^0.14.1",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.4.0",
    "ejs": "^2.4.2",
    "express": "^4.14.0",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "socket.io": "^1.4.8",
    "systemjs": "0.19.27",
    "zone.js": "^0.6.12"
  }
}
